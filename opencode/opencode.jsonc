{
  "$schema": "https://opencode.ai/config.json",
  "server": {
    "port": 8123,
    "hostname": "0.0.0.0",
    "mdns": true
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "exa-search": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}",
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "bunx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  }
}
